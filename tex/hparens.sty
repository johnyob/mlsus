\def \hparen@size {0.15ex}
\def \hparen@end #1#2{\vrule width\hparen@size depth#1ex height#2ex}
\def \hparen@line #1#2#3{\hbox{%\hskip \leftmargin
    \hbox to \linewidth
       {\hparen@end {#1}{#2}%
        \leaders \hrule height\hparen@size \hfill #3%
        \leaders \hrule height\hparen@size \hfill \kern \z@%
        \hparen@end {#1}{#2}}}}

\newcommand {\hparenopen}[1][]
    {%\vskip -\smallskipamount
     \par \nobreak
     %% \noindent\nobreak
     \hparen@line 10{#1}\par\nobreak \smallskip\nobreak
     \ignorespaces}

\newcommand {\hparenclose}[1][]
    {%\nobreak \vskip -\smallskipamount \nobreak
     \par\nobreak
     \noindent \hparen@line 01{#1}\par\smallskip\ignorespaces}

\newenvironment{hparens}{\hparenopen}{\hparenclose}
