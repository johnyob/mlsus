\def \ebox@ignore #1{#1}
\newcommand \Ebox[2][]
  {\begingroup
     \setkeys{ebox}{#1}%
     \ifmmode \let \@do \ensuremath\else \let \@do \ebox@ignore \fi
     \setbox0 \hbox {\@do{#2}}%
     \ifKV@ebox@phantom
       \setbox1 \hbox {\hskip -\fboxsep\colorbox{ebox}{\box0}}%
       \dp1 \dp0 \ht1 \ht0 \wd1 \wd0
       \box1
     \else
       \colorbox{ebox}{\box0}
     \fi
   \endgroup}
\newcommand \ebox[2][ebox]{\Ebox[color=#1]{#2}}
\newcommand{\Etbox}[3][]
        {\Ebox[#1]{\def \arraystretch {1}\begin{tabular}{#2}#3\end{tabular}}}
